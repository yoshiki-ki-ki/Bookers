<h1>Editing Book</h1>

<%= form_with model:@book, url: update_book_path(@book.id), method: :patch, local:true do |f| %>

  <% if @book.errors.any? %>
    <%= @book.errors.count %>errors prohibited this book from being saved:
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <div class="field">
    <label for="book_title">Title</label>
    <%= f.text_field :title %>
  </div>
  
  <div class="field">
    <label for="book_body">Body</label>
    <%= f.text_area :body %>
  </div>
  
  <div class="actions">
    <%= f.submit 'Update Book' %>
  </div>
  
  <%= link_to "Show", book_path(@book.id) %>
   |
  <%= link_to "Back", "/books" %>

<% end %>