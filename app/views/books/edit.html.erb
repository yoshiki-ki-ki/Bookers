<h1>Editing Book</h1>

<%= form_with model:@book, url: update_book_path(@book.id), method: :patch, local:true do |f| %>

  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= @book.errors.count %>errors prohibited this book from being saved:
      </h2>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <div class="field_with_errors">
      <label for="book_title">Title</label>
    </div>
    <div class="field_with_errors">
      <%= f.text_field :title %>
    </div>
  </div>
  
  <div class="field">
    <div class="field_with_errors">
      <label for="book_body">Body</label>
    </div>
    <div class="field_with_errors">
      <%= f.text_area :body %>
    </div>
  </div>
    
  
  <div class="actions">
    <%= f.submit 'Update Book' %>
  </div>
  
  <%= link_to "Show", book_path(@book.id) %>
   |
  <%= link_to "Back", "/books" %>

<% end %>